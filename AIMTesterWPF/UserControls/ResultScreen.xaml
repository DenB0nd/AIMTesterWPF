<UserControl x:Class="AIMTesterWPF.UserControls.ResultScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIMTesterWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Viewbox>
                <TextBlock>
                    <Run>Hitts:</Run>
                    <Run Text="{Binding Hitts}" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run>Misses:</Run>
                    <Run Text="{Binding Misses}" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run>Accuracy:</Run>
                    <Run Text="{Binding Accuracy, StringFormat=N2}" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run>Press to restart</Run>
                </TextBlock>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
